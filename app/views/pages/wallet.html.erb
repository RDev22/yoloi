<h1>#MY WALLET</h1>

<div class="container">
  <h6>Total de tokens: <%=@total_tokens%></h6>
  <h6>Total de empresas: <%=@total_company%></h6>
  <h6>Total investido: <%= number_to_currency(@total_invest, unit: "R$", separator: ",", delimiter: "") %></h6>
  <div class="row">
    <% @companies.each do |company| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card m-4" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%=company.name%></h5>
            <h6 class="card-subtitle mb-2 text-muted">Number of Token: <%=company.tokens.sum(:purchased_tokens)%></h6>
            <h6 class="card-subtitle mb-2 text-muted">Total: <%=number_to_currency(company.tokens.sum(:purchased_tokens) * company.price_of_token,
                 unit: "R$", separator: ",", delimiter: "")%></h6>
            <%=link_to "Invest more", company_path(company), class: "btn"%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
