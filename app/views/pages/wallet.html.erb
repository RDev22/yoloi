<h1>#MY WALLET</h1>

<div class="container">
  <div class="row justify-content-between">
    <% @companies.each do |company| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card m-4" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%=company.name%></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%=company.tokens.sum(:purchased_tokens)%></h6>
            <%=link_to "invest more", company_path(company)%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
    <div class="row my-3">
        <div class="col">
            <h4>Bootstrap 4 Chart.js - Line Chart</h4>
        </div>
    </div>
    <div class="row my-2">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <canvas id="chLine" height="100"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>
