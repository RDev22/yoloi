<div class="container">
  <div class="row justify-content-center align-items-center h-100">
    <div class="col-4 form-yolo mt-5">
      <p><strong> Name: </strong><%= @company.name %></p>
      <p><strong> Address: </strong><%= @company.address %></p>
      <p><strong> Equety: </strong><%= @company.equety %></p>
      <p><strong> Net Inc: </strong><%= @company.net_inc %></p>
      <p><strong> Activity: </strong><%= @company.activity %></p>
      <p><strong> Description: </strong><%= @company.description %></p>
      <p><strong> Tokens: </strong><%= @company.max_tokens %></p>
      <p><strong> Price/Token: </strong><%= @company.price_of_token %></p>
      <p><%= link_to "Back", companies_path %></p>
      <p><%= link_to "Investir", new_company_token_path(@company) %></p>
    </div>
  </div>
  <div class="row justify-content-center align-items-center h-100">
    <div style="width: 80%; height: 300px;", class="col-12 mt-4 map-container"
        data-controller="mapbox"
        data-mapbox-markers-value="<%= @markers.to_json %>"
        data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
  </div>
</div>
